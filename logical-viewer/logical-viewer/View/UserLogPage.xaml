<Page
  x:Class="LogicalViewer.View.UserLogPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:LogicalViewer.View"
  xmlns:dataModel="using:LogicalParse.DataModel"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
  >
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <Grid Grid.Column="0">
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <Grid Grid.Row="0">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0">Accounts:</TextBlock>
        <ListView x:Name="AccountsList" Grid.Row="1" 
                  ItemsSource="{x:Bind ViewModel.UserLog.UserAccounts}"
                  SelectionMode="None"
                  IsItemClickEnabled="True"
                  ItemClick="ListView_ItemClick">
          <ListView.ItemTemplate>
            <DataTemplate x:DataType="dataModel:UserAccount">
              <StackPanel Orientation="Horizontal">
                <TextBlock Text="{x:Bind Name}" />
                <TextBlock> -</TextBlock>
                <TextBlock Text="{x:Bind SourceKind}" />
              </StackPanel>
            </DataTemplate>
          </ListView.ItemTemplate>
        </ListView>
      </Grid>

      <Grid Grid.Row="1">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0">Calendars:</TextBlock>
        <ListView x:Name="CalendarsList"
                  Grid.Row="1" 
                  ItemsSource="{x:Bind ViewModel.UserLog.UserCalendars}"
                  SelectionMode="None"
                  IsItemClickEnabled="True"
                  ItemClick="ListView_ItemClick">
          <ListView.ItemTemplate>
            <DataTemplate x:DataType="dataModel:UserCalendar">
              <StackPanel Orientation="Horizontal">
                <TextBlock Text="{x:Bind Name}"/>
                <TextBlock> -</TextBlock>
                <TextBlock Text="{x:Bind ID}"/>
              </StackPanel>
            </DataTemplate>
          </ListView.ItemTemplate>
        </ListView>
      </Grid>

      <Grid Grid.Row="2">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0">Sync Queues:</TextBlock>
        <ListView x:Name="SyncQueuesList" 
                  Grid.Row="1" 
                  ItemsSource="{x:Bind ViewModel.UserLog.UserSyncQueues}"
                  SelectionMode="None"
                  IsItemClickEnabled="True"
                  ItemClick="ListView_ItemClick">
          <ListView.ItemTemplate>
            <DataTemplate x:DataType="dataModel:UserSyncQueue">
              <StackPanel Orientation="Horizontal">
                <TextBlock Text="{x:Bind SourceKind}"/>
                <TextBlock> -</TextBlock>
                <TextBlock Text="{x:Bind SourceUser}"/>
              </StackPanel>
            </DataTemplate>
          </ListView.ItemTemplate>
        </ListView>
      </Grid>
    </Grid>
    <Frame x:Name="DetailFrame" Grid.Column="1">
      
    </Frame>
  </Grid>
</Page>
